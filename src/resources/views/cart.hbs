<body>
    <table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    {{#each items}}
    <tr>
      <td>{{name}}</td>
      <td>${{price}}</td>
      <td>
        <input type="number" value="{{quantity}}" min="1" />
      </td>
      <td>${{total}}</td>
    </tr>
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">Total:</td>
      <td>${{total}}</td>
    </tr>
  </tfoot>
</table>

